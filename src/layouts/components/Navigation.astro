---
import Logo from "@/components/Logo.astro";
import menu from "@/config/menu.json";

export interface ChildNavigationLink {
  name: string;
  url: string;
}

export interface NavigationLink {
  name: string;
  url: string;
  hasChildren?: boolean;
  children?: ChildNavigationLink[];
}

const { main }: { main: NavigationLink[] } = menu;
const { pathname } = Astro.url;
---

<script>
  const checkbox = document.getElementById("nav-toggle")! as HTMLInputElement;
  document.addEventListener("click", (event: Event) => {
    const classList = (event.target as HTMLElement).classList;
    if (classList.contains("auto-close-nav")) checkbox.checked = false;
  });
</script>

<header
  class="absolute top-0 left-0 right-0 z-30 bg-transparent header font-heading"
>
  <nav
    class="container relative flex flex-wrap items-center justify-between navbar"
  >
    <!-- logo -->
    <div class="order-0">
      <Logo />
    </div>
    <!-- navbar toggler -->
    <input id="nav-toggle" type="checkbox" class="hidden" />
    <label
      for="nav-toggle"
      class="flex items-center order-3 cursor-pointer lg:hidden text-dark lg:order-1"
    >
      <svg id="show-button" class="block h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Open</title>
        <path d="M0 3h20v2H0V3z m0 6h20v2H0V9z m0 6h20v2H0V0z"></path>
      </svg>
      <svg id="hide-button" class="hidden h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Close</title>
        <polygon
          points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2"
          transform="rotate(45 10 10)"></polygon>
      </svg>
    </label>
    <ul
      id="nav-menu"
      class="order-3 hidden w-full lg:order-1 lg:flex lg:w-auto lg:space-x-2 lg:pb-0 xl:space-x-8"
    >
      {
        main.map((menu) => (
          <li class="nav-item">
            <a
              href={menu.url}
              class={`p-3 text-dark transition uppercase tracking-wide hover:text-dark hover:bg-secondary lg:px-2 flex items-center lg:h-14 auto-close-nav ${
                (pathname === `${menu.url}/` || pathname === menu.url) &&
                "active"
              }`}
            >
              {menu.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  input#nav-toggle:checked + label #show-button {
    @apply hidden;
  }

  input#nav-toggle:checked + label #hide-button {
    @apply block;
  }

  input#nav-toggle:checked ~ #nav-menu {
    @apply block;
  }
</style>
